@model ChurchGivingRecorder.Models.FundsReportParams

@{
    ViewData["Title"] = "Funds";
}

<h1>Funds</h1>

<form asp-action="Funds">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupBy" class="control-label"></label>
                <select asp-for="GroupBy" asp-items="Html.GetEnumSelectList<ChurchGivingRecorder.Models.GroupBy>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReportFormat" class="control-label"></label>
                <select asp-for="ReportFormat" asp-items="Html.GetEnumSelectList<ChurchGivingRecorder.Models.ReportFormat>()" class="form-control"></select>
            </div>

            <input type="submit" value="Generate Report" class="btn btn-primary" />
        </div>
    </div>
</form>